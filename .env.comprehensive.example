# Chopsticks comprehensive env (example)
# This file documents additional knobs. Copy to .env and fill in as needed.
# NEVER commit real secrets.

STORAGE_DRIVER=postgres
DISCORD_TOKEN=__REPLACE_ME__
CLIENT_ID=__REPLACE_ME__
BOT_OWNER_IDS=__YOUR_DISCORD_USER_ID_COMMA_SEPARATED__
AGENT_TOKEN_KEY=__REPLACE_WITH_64_CHAR_HEX__

POSTGRES_URL=postgresql://chopsticks:chopsticks@postgres:5432/chopsticks
DATABASE_URL=postgresql://chopsticks:chopsticks@postgres:5432/chopsticks
REDIS_URL=redis://redis:6379

LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_PASSWORD=youshallnotpass

AGENT_CONTROL_HOST=0.0.0.0
AGENT_CONTROL_PORT=8787

# Optional: invite permissions for deployed agents
AGENT_INVITE_PERMS=3147776

# Idle auto-release (voice sessions)
AGENT_SESSION_IDLE_RELEASE_MS=1800000
AGENT_SESSION_IDLE_SWEEP_MS=60000

# Idle auto-release (text sessions like trivia/chat)
AGENT_TEXT_SESSION_IDLE_RELEASE_MS=900000

# FunHub
FUN_PROVIDER=auto
FUNHUB_URL=http://funhub:8790
FUNHUB_REQUIRE_API_KEY=true
FUNHUB_INTERNAL_API_KEY=__REPLACE_ME__
FUNHUB_API_KEYS=
FUNHUB_RATE_LIMIT_MAX=120
FUNHUB_RATE_LIMIT_WINDOW_MS=60000
FUNHUB_CORS_ORIGINS=

# Optional text LLM (used by /agent chat if set; falls back if not)
TEXT_LLM_URL=http://voice-llm:9001

# Health/metrics
HEALTH_PORT=8080
METRICS_PORT=9100

# Visuals
SVG_CARDS=true
