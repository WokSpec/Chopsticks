FROM node:20

LABEL maintainer="Chopsticks Team"
LABEL description="Production Discord bot with Canvas graphics"

WORKDIR /app

# Install system dependencies for Canvas
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    python3 \
    pkg-config \
    libcairo2-dev \
    libjpeg-dev \
    libpango1.0-dev \
    libgif-dev \
    libpixman-1-dev \
    libfreetype6-dev \
    fontconfig \
    libfontconfig1-dev \
    libglib2.0-dev \
    librsvg2-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy dependencies
COPY package*.json ./

# Install Node dependencies with canvas build
RUN npm ci --no-optional \
    && npm rebuild canvas --build-from-source \
    && npm cache clean --force

# Copy application
COPY . .

# Set environment
ENV NODE_ENV=production
ENV NODE_OPTIONS="--max-old-space-size=512"

EXPOSE 8080 9229

HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD node -e "const p=process.env.HEALTH_PORT||process.env.METRICS_PORT||9100;require('http').get('http://localhost:'+p+'/healthz', (r) => process.exit(r.statusCode === 200 ? 0 : 1)).on('error', () => process.exit(1))" || exit 1

CMD ["npm", "run", "bot"]
