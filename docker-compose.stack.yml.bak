services:
  redis:
    image: redis:7-alpine
    restart: unless-stopped
    command: ["redis-server", "--appendonly", "yes"]
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data

  postgres:
    image: postgres:16-alpine
    restart: unless-stopped
    environment:
      POSTGRES_USER: ${POSTGRES_USER:-chopsticks}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-changeme}
      POSTGRES_DB: ${POSTGRES_DB:-chopsticks}
      PGDATA: /var/lib/postgresql/data/pgdata
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

  lavalink:
    image: ghcr.io/lavalink-devs/lavalink:4
    restart: unless-stopped
    ports:
      - "2333:2333"
    volumes:
      - ./lavalink/config/application.yml:/opt/Lavalink/application.yml:ro
      - ./lavalink/config/plugins:/opt/Lavalink/plugins:ro

  prometheus:
    image: prom/prometheus:latest
    restart: unless-stopped
    ports:
      - "9090:9090"
    volumes:
      - ./tools/prometheus.yml:/etc/prometheus/prometheus.yml:ro

  grafana:
    image: grafana/grafana:latest
    restart: unless-stopped
    ports:
      - "3000:3000"
    environment:
      GF_SECURITY_ADMIN_USER: admin
      GF_SECURITY_ADMIN_PASSWORD: admin
    volumes:
      - grafana_data:/var/lib/grafana

  bot:
    build:
      context: .
      dockerfile: Dockerfile.bot
    restart: unless-stopped
    env_file: .env
    environment:
      - NODE_ENV=production
      - STORAGE_DRIVER=postgres
      - DISCORD_TOKEN=${DISCORD_TOKEN:?DISCORD_TOKEN is required}
      - CLIENT_ID=${CLIENT_ID:?CLIENT_ID is required}
      - BOT_OWNER_ID=${BOT_OWNER_ID:?BOT_OWNER_ID is required}
      - POSTGRES_URL=postgres://${POSTGRES_USER:-chopsticks}:${POSTGRES_PASSWORD:-changeme}@postgres:5432/${POSTGRES_DB:-chopsticks}
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - LAVALINK_HOST=lavalink
      - LAVALINK_PORT=2333
      - LAVALINK_PASSWORD=${LAVALINK_PASSWORD:-youshallnotpass}
    depends_on:
      - postgres
      - redis
      - lavalink
    networks:
      - default

  dashboard:
    build:
      context: .
      dockerfile: Dockerfile.bot
    restart: unless-stopped
    env_file: .env
    environment:
      - NODE_ENV=production
      - STORAGE_DRIVER=postgres
      - DISCORD_CLIENT_ID=${CLIENT_ID:?CLIENT_ID is required}
      - DISCORD_CLIENT_SECRET=${DISCORD_CLIENT_SECRET:?DISCORD_CLIENT_SECRET is required}
      - DISCORD_REDIRECT_URI=${DISCORD_REDIRECT_URI:?DISCORD_REDIRECT_URI is required}
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_URL=redis://redis:6379
    command: ["npm", "run", "dashboard"]
    healthcheck:
      test: ["CMD-SHELL", "node -e \"require('http').get('http://localhost:8788/health', r => process.exit(r.statusCode === 200 ? 0 : 1)).on('error', () => process.exit(1))\""]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 20s
    ports:
      - "8788:8788"
    depends_on:
      - postgres
      - redis
    networks:
      - default

  caddy:
    image: caddy:2-alpine
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy_data:/data
      - caddy_config:/config
    depends_on:
      - bot
      - dashboard

volumes:
  redis_data:
  postgres_data:
  grafana_data:
  caddy_data:
  caddy_config:
